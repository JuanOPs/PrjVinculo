<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrjVinculo.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button
                Text="Abrir Produto"
                x:Name="btnProduto"
                Clicked="btnProduto_Clicked"
                />

            <Button
                Text="Abrir outros Produtos"
                x:Name="btnOuProdutos"
                Clicked="btnOuProdutos_Clicked"
                />

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
